@model Ecommerce.Models.StockControl

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>StockControl</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.PurchasePrice" class="control-label"></label>
                <input asp-for="Product.PurchasePrice" class="form-control" />
                <span asp-validation-for="Product.PurchasePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.RetailPrice" class="control-label"></label>
                <input asp-for="Product.RetailPrice" class="form-control" />
                <span asp-validation-for="Product.RetailPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductAmount" class="control-label"></label>
                <input asp-for="ProductAmount" class="form-control" />
                <span asp-validation-for="ProductAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StockId" class="control-label"></label>
                <select asp-for="StockId" asp-items="(SelectList)@ViewData["StockId"]" class="form-control"></select>
                <span asp-validation-for="StockId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
